</div>

<div class="container">
    <div class="row row-class">
        <h1 class="text-center">Recent Blogs</h1>
        @foreach (var allblogs in Model.GetAllBlogs)
            {
            <div class="col-sm-4">
                <figure class="snip1166">
                    <img src="@("/Content/images/RecentBlogs/" + allblogs.BlogPicture)" alt="@(allblogs.BlogPicture)" />
                    <figcaption>
                        <a href="~/ViewBlog/Index?BlogId=@allblogs.BlogID"><h3>@allblogs.BlogCategory</h3></a>
                        <div>
                            <p>"@(allblogs.BlogTitle) <br /> @(allblogs.BlogWriter) &nbsp; @(allblogs.BlogDate)"</p>
                        </div>
                        @*@Html.ActionLink("ClickME", "Index", "ViewBlog", new { BlogId = allblogs.BlogID }, null)*@
                    </figcaption>
                </figure>
            </div>
        }
    </div>
    <div class="row">
        <a class="button" href="@Url.Action("Index","AllBlog")">View More</a>
    </div>
</div>
@*Above Section end*@

