@*News Letter*@
<div class="container">
    <div class="row row-class">
        <h1 class="text-center">Blog Categories</h1>
        @{
            foreach (var blogitems in @Model.GetAllBlogsCategory)
            {
                <div class="col-sm-4">
                    <div class="news">
                        <div class="img-figure">
                            <div class="cat">@(blogitems.BlogCategory)</div>
                            <img src=@("/Content/images/BlogCategories/" + blogitems.BlogImage) class="img-responsive">
                        </div>
                        <div class="title">
                            <h1>@(blogitems.BlogTitle)</h1>
                        </div>
                        <p class="description">
                            @(blogitems.BlogDescription)
                        </p>
                    </div>
                </div>
            }
        }
    </div>
    <div class="row">
        <a class="button" href="@Url.Action("Index","BlogCategory")">View More</a>
    </div>
</div>
@*Above Section end*@

