@model ABIdea.Models.ViewBlog.BlogList
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts{
    <link href="~/Content/css/custom/ViewBlog.css" rel="stylesheet" />
}
<div class="container">
    <div class="row">
        <div class="col-md-12 blogShort">
                <h1>@Model.BlogTitle</h1>
                <img src="@("/Content/images/RecentBlogs/" + Model.BlogPicture)" alt="post img" class="pull-left img-responsive postImg img-thumbnail margin10">
                <article>
                    <p>
                        @Model.BlogDescription
                    </p>
                </article>
            </div>
    </div>
</div>
